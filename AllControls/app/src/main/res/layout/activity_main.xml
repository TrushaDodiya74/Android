<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F2F9FF">

            <LinearLayout
                android:id="@+id/ly1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#0B59D7"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="All Controls"
                    android:textSize="40dp"
                    android:textStyle="italic"
                    android:textColor="#F2F9FF">
                </TextView>
            </LinearLayout>
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ly1"
                android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/ly2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="TextView :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:background="#31A9FF"
                        android:textStyle="bold"
                        android:textColor="#F2F9FF"
                        android:padding="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly2"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="AutoCompleteTextView :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:background="#31A9FF"
                        android:textStyle="bold"
                        android:textColor="#F2F9FF"
                        android:padding="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly3"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="RadioButtons :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option A"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#31A9FF">
                        </RadioButton>
                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option B"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#31A9FF">
                        </RadioButton>
                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option C"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#31A9FF">
                        </RadioButton>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly4"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="RadioGroup :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioButton
                                android:id="@+id/radioButton4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Option I"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#31A9FF">
                            </RadioButton>
                            <RadioButton
                                android:id="@+id/radioButton5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Option II"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#31A9FF">
                            </RadioButton>
                            <RadioButton
                                android:id="@+id/radioButton6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Option III"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#31A9FF">
                            </RadioButton>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly5"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="CheckBox :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/checkbox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option 1"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#31A9FF" />
                        <CheckBox
                            android:id="@+id/checkbox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option 2"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#31A9FF"/>
                        <CheckBox
                            android:id="@+id/checkbox3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Option 3"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#31A9FF" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly6"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="Spinner :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:background="#31A9FF"
                        android:textStyle="bold"
                        android:textColor="#F2F9FF"
                        android:padding="2dp"
                        android:entries="@array/sa"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly7"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="ListView :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <ListView
                        android:layout_weight="1"
                        android:id="@+id/listView"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:divider="#0B59D7"
                        android:dividerHeight="1dp"
                        android:background="#31A9FF"
                        android:padding="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly8"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="DatePicker :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <DatePicker
                            android:id="@+id/datePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:calendarViewShown="true"
                            android:spinnersShown="false"
                            android:datePickerMode="calendar"
                            android:padding="5dp"
                            android:calendarTextColor="@color/white"
                            android:background="#31A9FF"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly9"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="TimePicker :"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TimePicker
                            android:id="@+id/timePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:timePickerMode="spinner"
                            android:background="#31A9FF"
                            android:numbersTextColor="@color/white"
                            android:numbersSelectorColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/ly10"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="SeekBar :"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:outlineAmbientShadowColor="#0B59D7" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/ly11"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="RatingBar :"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:outlineAmbientShadowColor="#0B59D7"
                        android:max="5"
                        android:stepSize="0.5"
                        android:numStars="5"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:backgroundTint="#0B59D7" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/ly12"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="Switch :"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#31A9FF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/ly13"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:text="ToggleButton :"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:padding="5dp" />

                    <ToggleButton
                        android:id="@+id/toggleButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#0B59D7"
                        android:background="#31A9FF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/ly14"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="10dp">

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:text="SUBMIT"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0B59D7"
                        android:background="#31A9FF"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp" />
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
</RelativeLayout>
